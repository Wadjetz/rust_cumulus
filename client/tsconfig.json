{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "lib": [ "es5", "es6", "es2015.promise", "es2017", "dom" ]
}
